{% extends "base.html" %}
{% block content %}
    <ul class="list-group">
        {% for id, paste in pastes.items() %}
            <a href="{{ url_for('paste.get', paste_id=id) }}"
               class="list-group-item list-group-item-action d-flex justify-content-between">
                <div>{{ paste.name }}</div>
                <div>{{ paste.created_at|format_time }}</div>
            </a>
        {% endfor %}
    </ul>
{% endblock content %}
