{% extends "base.jinja" %}
{% block content %}
    <div class="btn-group mb-3" role="group" aria-label="Paste actions">
        {# TODO: Refactor into array #}
        <button type="button"
                class="btn btn-outline-secondary d-flex align-items-center column-gap-2"
                onclick="cherrybin.pasteToFile(document.getElementById('pasteTitle').innerText, document.getElementById('pasteContents').innerText)">
            {% include "icons/download.svg" %}
            Download
        </button>
        <button type="button"
                class="btn btn-outline-secondary d-flex align-items-center column-gap-2"
                onclick="window.print()">
            {% include "icons/printer.svg" %}
            Print
        </button>
    </div>
    <div class="card print-visible">
        <div class="card-body">
            <h1 id="pasteTitle" class="card-title">{{ paste.title|e }}</h1>
            <div id="pasteContents" class="card-text pasta-body">{{ paste.contents|e }}</div>
        </div>
        <div class="card-footer">
            <div>Created at: {{ paste.meta.created_at|format_time }}</div>
            {% if paste.meta.expires_at != None %}<div>Expires at: {{ paste.meta.expires_at|format_time }}</div>{% endif %}
        </div>
    </div>
    <script type="text/javascript">cherrybin.processEncryptedPaste(document.getElementById('pasteTitle').innerText, document.getElementById('pasteContents').innerText);</script>
{% endblock content %}
