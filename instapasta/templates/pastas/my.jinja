{% extends "base.html" %}
{% block content %}
    <ul class="list-group">
        {% for id, pasta in pastas.items() %}
            <a href="{{ url_for('pasta.get', pasta_id=id) }}"
               class="list-group-item list-group-item-action d-flex justify-content-between">
                <div>{{ pasta.name }}</div>
                <div>{{ pasta.created_at|format_time }}</div>
            </a>
        {% endfor %}
    </ul>
{% endblock content %}
