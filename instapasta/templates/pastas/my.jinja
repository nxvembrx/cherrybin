{% extends "base.html" %}
{% block content %}
    <ul class="list-group">
        {% for pasta in pastas %}
            <a href="{{ url_for('pasta.get', id=pasta.id) }}"
               class="list-group-item list-group-item-action d-flex justify-content-between">
                <div>{{ pasta.name }}</div>
                <div>{{ pasta.timestamp|timestamp_to_date }}</div>
            </a>
        {% endfor %}
    </ul>
{% endblock content %}
